{
    "family": "wfx-storeshop",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "256",
    "memory": "512",
    "executionRoleArn": "arn:aws:iam::108188564905:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::108188564905:role/appTaskRole",
    "containerDefinitions": [
      {
        "name": "app",
        "image": "108188564905.dkr.ecr.us-east-1.amazonaws.com/webforx-online-storeshop:latest",
        "essential": true,
        "portMappings": [{ "containerPort": 8080, "protocol": "tcp" }],
        "environment": [
          { "name": "PORT", "value": "8080" },
          { "name": "TYPEORM_SYNC", "value": "true" },
          { "name": "DB_HOST", "value": "database-1.c3mldqa7xfbn.us-east-1.rds.amazonaws.com" },
          { "name": "DB_PORT", "value": "5432" },
          { "name": "DB_NAME", "value": "webforx_store" },
          { "name": "DB_USER", "value": "app_user" },
          { "name": "DB_SSL", "value": "true" }
        ],
        "secrets": [
            {
              "name": "DB_SECRET",
              "valueFrom": "arn:aws:secretsmanager:us-east-1:108188564905:secret:rds!db-c07a2f88-f8b2-424a-ae3a-acd4ed2d6ed5-MWd7io"
            }
          ],          
        "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "/ecs/wfx-storeshop",
            "awslogs-region": "us-east-1",
            "awslogs-stream-prefix": "ecs"
          }
        },
        "healthCheck": {
          "retries": 3,
          "command": ["CMD-SHELL", "curl -fsS http://localhost:8080/healthz || exit 1"],
          "timeout": 5,
          "interval": 30,
          "startPeriod": 10
        }
      }
    ]
  }
  